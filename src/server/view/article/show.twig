                <div class="mbs">
                    <span>田胜杰</span>
                    <a class="btn btn-sm mls">关注</a>
                </div>
                <div class="number clearfix text-xs">
                    <dl>
                        <dt class="text-grey">作品</dt>
                        <dd >54</dd>
                    </dl>
                    <dl>
                        <dt class="text-grey">关注</dt>
                        <dd>54</dd>
                    </dl>
                    <dl>
                        <dt class="text-grey">喜欢</dt>
                        <dd>54</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        {{ article.content|raw }}
    </div>  
    {# <div>
        点赞，喜欢，评论，
    </div>      #}
  </div>
