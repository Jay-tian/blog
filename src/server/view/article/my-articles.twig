{% extends 'layout.twig' %}
{% set title =  '我的文章' %}
{% set styles = ['/dist/css/my.css'] %}
{% block main %}
  
  <div class="my-article main container">
    <ul>
      {% for article in articles %}
        <li>
          <a href="{{url('showArticle', {id: article.id})}}">
          {{ article.title }}
          </a>
          <a class="manage btn btn-primary" href="{{ url('updateArticle', {id: article.id}) }}">
            管理
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}