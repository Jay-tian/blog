<header class="header clearfix">
  <div class="col-md-6">
    <h1>
      <span class="red">J</span><span class="yellow">a</span><span class="blue">y</span>
    </h1>
    <ul>
      <li><a href="/">首页</a></li>
    </ul>
  </div>

  <div class="col-md-6">

    {% if user.isLogin() %}
    <div class="profile">
      <span class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        {{ user.getNickname()|slice(0,1)|upperCase }}
      </span>
      <ul class="dropdown-menu">
        {% if user.isAdmin() %}
          <li><a href="{{ url('adminIndex') }}">后台</a></li>
        {% endif %}
        <li><a href="{{ url('createArticle') }}">创作</a></li>
        <li><a href="{{ url('myArticles') }}">我的</a></li>
        <li><a href="{{ url('logout') }}">退出</a></li>
      </ul>
    </div>
    {% else %}
      <div class="profile login">
        <a class="white" href="{{ url('login') }}">
          登录
        </a>
      </div>
    {% endif %}
  </div>
</header>