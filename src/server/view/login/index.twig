{% extends 'layout.twig' %}

{% set title = "登录" %}
{{ scripts(scriptList, {10: ['/dist/js/libs/jquery-validation.js', '/dist/js/login/index.js']}) }}

{% set styles = ['/dist/css/login.css'] %} 

{% block body %}
  <div class="login">
    <div id="particles-js" class="particles"></div>
    <div class="login-main active">
      <div class="login-title">
        <h1 class="">
          登录
        </h1>
        <span class="js-trans primary-color">
          注册
        </span>
      </div>
      <form autocomplete="false" role="presentation" action="{{ url('login') }}" method="post" id="login">
        <div class="form-group">
          <input placeholder="用户名"  autocomplete="false" class="form-control" name="nickname" type="text">
        </div>
        <div class="form-group">
          <input placeholder="密码"  autocomplete="false" class="form-control" type="password" name="password">
        </div>
        <button class="btn btn-primary btn-main mt1" type="submit">登陆</button>
      </form>
    </div>

    <div class="login-main">
      <div class="login-title">
        <h1 class="">
          注册
        </h1>
        <span class="js-trans primary-color">
          登录
        </span>
      </div>
      <form action="{{ url('register') }}" id="register" method="post">
        <div class="form-group">
          <input placeholder="用户名"  autocomplete="off" data-url="{{ url('nicknameExist', {nickname: '$'}) }}" class="form-control" name="nickname" type="text">
        </div>
        <div class="form-group">
          <input placeholder="邮箱"  autocomplete="off" data-url="{{ url('emailExist', {email: '$'}) }}" class="form-control" type="text" name="email">
        </div>        
        <div class="form-group">
          <input placeholder="密码"  autocomplete="off" class="form-control" type="password" name="password">
        </div>
        <button class="btn btn-primary btn-main mt1" type="submit">注册</button>
      </form>
    </div>
  </div>
{% endblock %} 