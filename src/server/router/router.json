{
  "options": {
    "profix": ""
  },
  "index": {
    "path": "/",
    "controller": "Default"
  },
  "login": {
    "path": "/login",
    "controller": "User",
    "methods": ["get", "post"]
  },
  "register": {
    "path": "/register",
    "controller": "User",
    "methods": ["post"]
  },
  "registerEmailValidate": {
    "path": "/register/email/verify",
    "controller": "User"
  },
  "logout": {
    "path": "/logout",
    "controller": "User"
  },
  "createArticle": {
    "path": "/article/create",
    "controller": "Article",
    "methods": ["get", "post"]
  },
  "updateArticle": {
    "path": "/article/update/:id",
    "controller": "Article",
    "methods": ["get", "post"]
  },
  "deleteArticle": {
    "path": "/article/delete/:id",
    "controller": "Article",
    "methods": ["post"]
  },
  "showArticle": {
    "path": "/article/:id",
    "controller": "Article",
    "methods": ["get"]
  },
  "imageUpload": {
    "path": "/image/uploader",
    "controller": "System",
    "methods": ["post"]
  },
  "coding": {
    "path": "/coding",
    "controller": "Default"
  },
  "showUser": {
    "path": "/user/:id",
    "controller": "User"
  },
  "showApp": {
    "path": "/apps/:id",
    "controller": "App"
  },
  "emailExist": {
    "path": "/user/:email/exist",
    "controller": "User"
  },
  "nicknameExist": {
    "path": "/user/:nickname/exist",
    "controller": "User"
  }
}
